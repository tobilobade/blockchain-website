<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/gift-friend.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <% include partials/header.ejs %>   

    <div class="">
        <!-- Contract Connection Status -->
        <button id="connect-button" class="connect-button button" onclick="connectContract()">CONNECT</button>
        <p id="contractArea">Status: Not connected </p>
    </div>
   
   <!-- Contract Balance for Ticket Purchase -->
  <div>
       <p id="contractBalance">Contract Balance (Ticket Purchase): Not Connected to Contract</p>
        <button onclick="getContractBalance()">GET CONTRACT BALANCE (Ticket Purchase)</button>
  </div>


   <!-- Withdraw from Contract -->
   <div>
       <input type="text" id="addressInput" placeholder="Enter Address"> <br>
       <input type="number" id="amountInput" placeholder="Enter Amount"> 
       <button onclick="withdraw()">WITHDRAW ETHER FROM CONTRACT</button> <br>
   </div>

   <script src="/javascripts/gift-friend.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/web3@1.3.0/dist/web3.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>